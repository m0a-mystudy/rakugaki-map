rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // drawings/{drawingId}/layers/{layerId}/tiles/{tileKey}.webp
    match /drawings/{drawingId}/{allPaths=**} {
      allow read: if true;                    // 誰でもタイルを見ることができる
      allow write: if request.auth != null;   // 認証済みユーザーのみアップロード可能
    }
  }
}
